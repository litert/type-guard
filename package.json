{
  "name": "@litert/typeguard",
  "version": "1.0.2",
  "description": "An easy and powerful data validation code generator by JavaScript.",
  "main": "lib/index.js",
  "scripts": {
    "prepare": "npm run rebuild",
    "build": "tsc -v && tsc -p .",
    "build-watch": "tsc -v && tsc -w -p .",
    "build-amd": "tsc -p tsconfig-amd.json",
    "build-systemjs": "tsc -p tsconfig-systemjs.json",
    "build-all": "npm run build & npm run build-amd & npm run build-systemjs",
    "rebuild": "npm run clean && npm run lint && npm run build-all",
    "test": "mocha",
    "clean": "rm -rf lib examples test dist",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint --ext ts src"
  },
  "keywords": [
    "litert",
    "lrt",
    "type",
    "checker",
    "validation"
  ],
  "author": "Angus.Fenying <fenying@litert.org> (https://fenying.net)",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/litert/type-guard.git"
  },
  "bugs": {
    "url": "https://github.com/litert/type-guard/issues"
  },
  "homepage": "https://github.com/litert/type-guard#readme",
  "dependencies": {},
  "types": "lib/index.d.ts",
  "typings": "lib/index.d.ts",
  "devDependencies": {
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "@types/mocha": "^5.2.7",
    "@types/node": "^11.15.20",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "eslint": "^7.6.0",
    "husky": "^4.2.5",
    "mocha": "^6.2.3",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint && npm run typecheck"
    }
  },
  "engines": {
    "node": ">=8.0.0"
  }
}
